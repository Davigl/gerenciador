<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="header-filter" data-parallax="true">
  <div class="container" style="margin-top: 150px;">
    <div class="row">
      <div class="col-md-8 ml-auto mr-auto">
        <div class="card card-login">
          <form class="form" method="" action="">
            <div class="card-header text-center">
              <h4 class="card-title">Login</h4>
            </div>
            <div class="card-body">
              <span class="bmd-form-group"><div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="material-icons">mail</i>

                  </span>

                </div>
                 <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email...', class: 'form-control'%>
                
              </div></span>

              <span class="bmd-form-group"><div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="material-icons">lock_outline</i>
                  </span>
                </div>

                <%= f.password_field :password, autocomplete: "current-password" , class: 'form-control', placeholder: 'Password...'%>
              </div></span>

            </div>
            <div class="footer text-center actions">
              <%= f.submit "ENTRAR", class: 'btn btn-primary btn-link btn-wd btn-lg' %>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>