<p id="notice"><%= notice %></p>

<div class="container">
<h1>Funcion√°rios</h1>

  <table class="table table-responsive">
  <thead class="thead-dark">
    <tr>
      <th>Cpf</th>
      <th>Nome</th>
      <th>Salario</th>
      <th>Data nasc</th>
      <th>Login</th>
      <th>Senha</th>
      <th>Cep</th>
      <th>Logradouro</th>
      <th>Num logradouro</th>
      <th>Bairro</th>
      <th>Cidade</th>
      <th>Uf</th>
      <th>Pais</th>
      <th>Cargo</th>
      <th>Setor</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funcionarios.each do |funcionario| %>
    <tr>
      <td><%= funcionario.cpf %></td>
      <td><%= funcionario.nome %></td>
      <td><%= funcionario.salario %></td>
      <td><%= funcionario.data_nasc %></td>
      <td><%= funcionario.cep %></td>
      <td><%= funcionario.logradouro %></td>
      <td><%= funcionario.num_logradouro %></td>
      <td><%= funcionario.bairro %></td>
      <td><%= funcionario.cidade %></td>
      <td><%= funcionario.uf %></td>
      <td><%= funcionario.pais %></td>
      <% funcionario.cargos.each do |cargo| %>
        <td><%= cargo.cargo %></td>
      <% end %>
      <% funcionario.setors.each do |setor| %>
        <td><%= setor.setor %></td>
      <% end %>
  
      <td><%= link_to 'Show', funcionario %></td>
      <td><%= link_to 'Edit', edit_funcionario_path(funcionario) %></td>
      <td><%= link_to 'Destroy', funcionario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
  
<br>
<%= link_to 'New Funcionario', new_funcionario_path, class: "btn btn-dark" %>

</table>  
</div>

