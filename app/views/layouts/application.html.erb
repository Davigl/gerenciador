<!DOCTYPE html>
<html>
<head>
	<title>Lace and Leather Shopping</title>
	
	<%= favicon_link_tag 'teste.png' %>

	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

	<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
	<link href="/assets/material/material-kit.css?v=2.0.4" rel="stylesheet" />
	<link href="/assets/custom.css" rel="stylesheet" />

</head>

<body>
	<nav class="navbar fixed-top navbar-expand-lg"  color-on-scroll="100" ">
		<div class="container">
			<div class="navbar-translate">
				<a class="navbar-brand" href="/">
					<div class="logo-big">
						<img src="/assets/logo_loja.png" class="img-fluid">
					</div>
				</a>

				<button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation">
					<span class="sr-only">Toggle navigation</span>
					<span class="navbar-toggler-icon"></span>
					<span class="navbar-toggler-icon"></span>
					<span class="navbar-toggler-icon"></span>
				</button>
			</div>

			<div class="collapse navbar-collapse">
				<ul class="navbar-nav ml-auto">
					<% if user_signed_in? %>
					<li class="nav-item">
						<%= link_to '<i class="material-icons">rotate_left</i> Sair'.html_safe, destroy_user_session_path, method: :delete, class: 'nav-link' %>
					</li>
					<% else %>
						<li class="nav-item">
						<a href="/users/sign_in" class="nav-link">
							<i class="material-icons">person</i> Login
						</a>
					</li>
					<% end %> 
				</ul>
			</div>
		</div>
	</nav>

	<div style="margin-top: 100px !important;">
		
		<%= yield %>	
	</div>

	<section>
		<footer class="footer footer-default" style="background-color: white; height: 170px;"">
			<div class="container">
				<nav class="float-left">

				</nav>
			</div>
		</footer>
	</section>
	
	<script src="/assets/material-kit/core/popper.min.js" type="text/javascript"></script>
	<script src="/assets/material-kit/core/bootstrap-material-design.min.js" type="text/javascript"></script>
	<script src="/assets/material-kit/moment.min.js"></script>
	<!--	Plugin for the Datepicker, full documentation here: https://github.com/Eonasdan/bootstrap-datetimepicker -->
	<script src="/assets/material-kit/plugins/bootstrap-datetimepicker.js" type="text/javascript"></script>
	<!--  Plugin for the Sliders, full documentation here: http://refreshless.com/nouislider/ -->
	<script src="/assets/material-kit/plugins/nouislider.min.js" type="text/javascript"></script>
	<!-- Place this tag in your head or just before your close body tag. -->
	<script async defer src="https://buttons.github.io/buttons.js"></script>
	<!-- Control Center for Material Kit: parallax effects, scripts for the example pages etc -->
	<script src="/assets/material-kit/material-kit.js?v=2.0.4" type="text/javascript"></script>

	<script type="text/javascript">
		$('.datetimepicker').datetimepicker({
			icons: {
				time: "fa fa-clock-o",
				date: "fa fa-calendar",
				up: "fa fa-chevron-up",
				down: "fa fa-chevron-down",
				previous: 'fa fa-chevron-left',
				next: 'fa fa-chevron-right',
				today: 'fa fa-screenshot',
				clear: 'fa fa-trash',
				close: 'fa fa-remove'
			}
		});
	</script>
</body>
</html>
