<!doctype html>
<html lang="en">
<head>
  <title>Lace and Leather Shopping</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <!--  Fonts and icons  -->
  <%= favicon_link_tag 'teste.png' %>
  <!--     Fonts and icons     -->
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
  <link href="/assets/material/material-kit.css?v=2.0.4" rel="stylesheet" />
  <link href="/assets/custom.css" rel="stylesheet" />
  
</head>
<body>

  <nav class="navbar fixed-top navbar-expand-lg"  color-on-scroll="100" ">
    <div class="container">
      <div class="navbar-translate">
        <a class="navbar-brand" href="https://demos.creative-tim.com/material-kit/index.html">
          <div class="logo-big">
            <img src="/assets/logo_loja.png" class="img-fluid">
          </div>

        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="sr-only">Lace and Leather</span>
          <span class="navbar-toggler-icon"></span>
          <span class="navbar-toggler-icon"></span>
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>

      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ml-auto">
        <% if not user_signed_in? %>
          <li class="nav-item">
            <a href="/clientes/new" class="nav-link">
              <i class="material-icons">input</i> CADASTRE-SE
            </a>
          </li>
          <% end %>
          <% if current_user != nil and current_user.is_admin? %>
          <li class="nav-item">
            <%= link_to '<i class="material-icons">person</i> Cadastrar Funcionário'.html_safe, new_funcionario_path, class: 'nav-link' %>
          </li>

          <li class="nav-item">
            <%= link_to '<i class="material-icons">work</i> Cadastrar Cargo'.html_safe, new_cargo_path, class: 'nav-link' %>
          </li>

          <li class="nav-item">
            <%= link_to '<i class="material-icons">group</i> Cadastrar Setor'.html_safe, new_setor_path, class: 'nav-link' %>
          </li>

          <li class="nav-item">
            <%= link_to '<i class="material-icons">dashboard</i> Dashboard'.html_safe, rails_admin_path, class: 'nav-link' %>
          </li>
          <% end %>
          <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to '<i class="material-icons">rotate_left</i> Sair'.html_safe, destroy_user_session_path, method: :delete, class: 'nav-link' %>
          </li>
          <% else %>
          <li class="nav-item">
            <a href="/users/sign_in" class="nav-link">
              <i class="material-icons">person</i> ENTRAR
            </a>
          </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>

  <div class="page-header" data-parallax="true" style=" margin-top: 50px; background-image: url('/assets/rochelle.jpg');">
    <br>
    <div class="container">
      <div class="section">

        <div class="row">
          <div class="col-md-8 ml-auto mr-auto">
            <div class="brand text-center">
              <h3 class="h2">FRETE GRÁTIS PARA COMPRAS A PARTIR DE <strong style="background-color: black;"> R$ 99,00 </strong> </h1>
                <h3 class="title text-center">VARIAS ROUPAS POR 1 REAL</h3>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="main main-raised">
      <div class="container">
        <div class="section">
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class="d-block w-100" src="/assets/4.jpg" alt="First slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="/assets/5.jpg" alt="Second slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="/assets/6.jpeg" alt="Third slide">
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
      </div>
    </div>

    <footer class="footer footer-default" >
      <div class="container">
        <nav class="float-left">
          <ul>

          </ul>
        </nav>
        <div class="copyright float-right">

        </div>
      </footer>
      <script src="/assets/material-kit/core/popper.min.js" type="text/javascript"></script>
      <script src="/assets/material-kit/core/bootstrap-material-design.min.js" type="text/javascript"></script>
      <script src="/assets/material-kit/moment.min.js"></script>
      <!--  Plugin for the Datepicker, full documentation here: https://github.com/Eonasdan/bootstrap-datetimepicker -->
      <script src="/assets/material-kit/plugins/bootstrap-datetimepicker.js" type="text/javascript"></script>
      <!--  Plugin for the Sliders, full documentation here: http://refreshless.com/nouislider/ -->
      <script src="/assets/material-kit/plugins/nouislider.min.js" type="text/javascript"></script>
      <!-- Place this tag in your head or just before your close body tag. -->
      <script async defer src="https://buttons.github.io/buttons.js"></script>
      <!-- Control Center for Material Kit: parallax effects, scripts for the example pages etc -->
      <script src="/assets/material-kit/material-kit.js?v=2.0.4" type="text/javascript"></script>

      <script type="text/javascript">
        $('.datetimepicker').datetimepicker({
          icons: {
            time: "fa fa-clock-o",
            date: "fa fa-calendar",
            up: "fa fa-chevron-up",
            down: "fa fa-chevron-down",
            previous: 'fa fa-chevron-left',
            next: 'fa fa-chevron-right',
            today: 'fa fa-screenshot',
            clear: 'fa fa-trash',
            close: 'fa fa-remove'
          }
        });
      </script> 
    </body>
    </html>